<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical"
	android:weightSum="3">

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Trace"
		android:id="@+id/trace"
		android:background="#E8ADAA"
		android:layout_weight=".2"
		android:hint="Previous steps"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="vertical">

		<TextView
			android:text="display data"
			android:layout_width="wrap_content"
			android:id="@+id/mainTextView1"
			android:layout_height="wrap_content"
			android:typeface="monospace"
			android:textSize="20sp"/>

	</LinearLayout>

	<TableLayout
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_width="match_parent">

		<TableRow
			android:layout_height="wrap_content"
			android:gravity="center"
			android:weightSum="5">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:id="@+id/SpareView"
				android:text="Curs HD"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:id="@+id/CursView"
				android:text="Curs"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="2"
				android:id="@+id/Next8View"
				android:text="Next8"/>

		</TableRow>

		<TableRow
			android:layout_height="wrap_content"
			android:gravity="center"
			android:weightSum="5">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:id="@+id/SpareView"
				android:text="Curs YX"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:id="@+id/CursXYView"
				android:text="CursXY"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="2"
				android:id="@+id/Next8XYView"
				android:text="Next8XY"/>

		</TableRow>

	</TableLayout>

	<TableLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content">

		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="UP"
				android:id="@+id/upButton"
				android:layout_span="3"
				android:onClick="buttonClicked"/>

		</TableRow>

		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/leftButton"
				android:onClick="buttonClicked"
				android:text="Left"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/rightButton"
				android:onClick="buttonClicked"
				android:text="Right"/>

		</TableRow>

		<TableRow
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Down"
				android:id="@+id/downButton"
				android:onClick="buttonClicked"
				android:layout_span="3"/>

		</TableRow>

	</TableLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:weightSum="4"
		android:layout_weight=".5">

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Start"
			android:onClick="buttonClicked"
			android:id="@+id/startButton"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Stop"
			android:onClick="buttonClicked"
			android:id="@+id/Stop"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Disp"
			android:onClick="buttonClicked"
			android:id="@+id/dispButton"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="diag"
			android:onClick="buttonClicked"
			android:id="@+id/modeButton"/>

	</LinearLayout>

</LinearLayout>

